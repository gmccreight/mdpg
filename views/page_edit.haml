#page_edit_ns_id

  - if readwrite_token == nil
    = haml :header_partial, :locals => {:page_name => nil}

  - path = readwrite_token == nil ? "/p/#{page.name}/update" \
  - : "/s/#{readwrite_token}/update"

  %form{:id => "editing_form_id",
    :action => path, :method => "post"}

    %div
      %textarea{ :id => "ta",
                 :name => "text", :cols => "200", :rows => "56" }=page_text
    %input{:type => "submit"}

%script(src="/woofmark/woofmark.js")
%script(src="/woofmark/other/megamark.js")
%script(src="/woofmark/other/domador.js")
%script(src="/woofmark/other/example.js")
