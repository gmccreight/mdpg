%h2 Tags
%div{"ng-controller" => "TagsCtrl"}
  %ul.unstyled
    %li{"ng-repeat" => "tag in tags"}
      {{tag.text}}
  %form{"ng-submit" => "addTag()"}
    %input{"ng-model" => "tagText", :placeholder => "add new tag here", :size => "30", :type => "text"}/
    %input.btn-primary{:type => "submit", :value => "add"}/
